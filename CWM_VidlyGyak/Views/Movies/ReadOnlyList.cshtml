@model List<CWM_VidlyGyak.Models.Movie>
@{
    ViewBag.Title = "Movies";
}

<h2>Movies</h2>

<table id="movies" class="table table-dark table-hover">
    <thead>
        <tr>
            <th>Movie</th>
            <th>Genre</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function () {
            var table = $("#movies").DataTable({
                ajax: {
                    url: "/Api/Movies",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name"
                        
                    },
                    {
                        data: "genre.name"
                    },
                ]
            });
        });
    </script>
}

